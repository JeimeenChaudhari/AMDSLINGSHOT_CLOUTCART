{
  "name": "emotion-adaptive-shopping-assistant",
  "version": "1.0.0",
  "description": "AI-powered browser extension for smart shopping with emotion detection",
  "main": "background/background.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:review": "jest tests/ai-review-analyzer.test.js --coverage",
    "test:behavioral": "jest tests/behavioral-emotion-detector.test.js --coverage",
    "test:performance": "jest --testNamePattern='Performance' --verbose",
    "test:integration": "jest --testNamePattern='Integration' --verbose",
    "benchmark": "node tests/run-benchmarks.js",
    "train:review": "node utils/train-review-model.js",
    "train:emotion": "node utils/train-emotion-model.js",
    "demo": "node tests/run-demo-analysis.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "build": "echo \"Building extension...\" && npm run lint && npm test",
    "package": "zip -r emotion-shopping-assistant.zip . -x '*.git*' 'node_modules/*' '*.pdf' 'package-lock.json' 'tests/*'",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "keywords": [
    "chrome-extension",
    "shopping",
    "emotion-detection",
    "ai",
    "price-comparison",
    "fake-reviews",
    "consumer-tech",
    "amd-slingshot",
    "hackathon"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/emotion-shopping-assistant"
  },
  "bugs": {
    "url": "https://github.com/yourusername/emotion-shopping-assistant/issues"
  },
  "homepage": "https://github.com/yourusername/emotion-shopping-assistant#readme",
  "dependencies": {
    "@tensorflow/tfjs": "^4.11.0",
    "compromise": "^14.10.0",
    "natural": "^6.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "@types/jest": "^29.5.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "models/**/*.js",
      "utils/**/*.js",
      "background/**/*.js",
      "content/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browser": {
    "chrome": ">=88.0.0"
  }
}
