{
  "manifest_version": 3,
  "name": "Emotion-Adaptive Shopping Assistant",
  "version": "1.0.0",
  "description": "AI-powered shopping assistant with emotion detection, price tracking, and smart recommendations",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*",
        "*://*.ebay.com/*",
        "*://*.walmart.com/*",
        "*://*.target.com/*",
        "*://*.meesho.com/*",
        "*://*.snapdeal.com/*",
        "*://*.shopclues.com/*",
        "*://*.paytmmall.com/*",
        "*://*.myntra.com/*",
        "*://*.ajio.com/*",
        "*://*.tatacliq.com/*",
        "*://*.koovs.com/*",
        "*://*.limeroad.com/*",
        "*://*.bewakoof.com/*",
        "*://*.nykaa.com/*",
        "*://*.purplle.com/*",
        "*://*.sugarcosmetics.com/*",
        "*://*.croma.com/*",
        "*://*.reliancedigital.in/*",
        "*://*.vijaysales.com/*",
        "*://*.bigbasket.com/*",
        "*://*.blinkit.com/*",
        "*://*.grofers.com/*",
        "*://*.zeptonow.com/*",
        "*://*.jiomart.com/*",
        "*://*.spencersretail.com/*",
        "*://*.firstcry.com/*",
        "*://*.hopscotch.in/*",
        "*://*.pepperfry.com/*",
        "*://*.urbanladder.com/*",
        "*://*.ikea.com/*",
        "*://*.indiamart.com/*"
      ],
      "js": [
        "models/simple-emotion-detector.js",
        "models/behavioral-data-collector.js",
        "models/feature-extractor.js",
        "models/emotion-ml-model.js",
        "utils/training-data-manager.js",
        "utils/model-trainer.js",
        "models/emotion-detection.js",
        "utils/review-analyzer.js",
        "utils/ai-recommendation-engine.js",
        "utils/price-tracker.js",
        "utils/comparison.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["models/*", "icons/*", "camera-permission.html", "camera-permission.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
